<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ContentTransitions">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditText">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">#000000</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:maxLines">2</item>

    </style>

    <style name="toolbar_textColor">
        <item name="tabTextColor">@color/textSecondary</item>
        <item name="tabSelectedTextColor">@color/textPrimary</item>
    </style>

    <style name="toolbar_textColor2">
        <item name="tabTextColor">#ffffff</item>
        <item name="tabSelectedTextColor">@color/translucent_white_20</item>
    </style>

    <!--无边界的点击动画-->
    <style name="button_background">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--有边界的点击动画-->
    <style name="button_background2">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!--无边界的点击动画-->
    <style name="view_foreground">
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--有边界的点击动画-->
    <style name="view_foreground2">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="mean_text">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:color">@color/textPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item><!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/popup_hide</item><!-- 指定消失的动画xml -->
    </style>
</resources>
